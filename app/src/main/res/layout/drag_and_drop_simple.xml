<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/DragDrop_Drag1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Drag 1" />

    <Button
        android:id="@+id/DragDrop_Drag2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/DragDrop_Drag1"
        android:layout_below="@+id/DragDrop_Drag1"
        android:layout_marginTop="30dp"
        android:text="Drag 2" />

    <Button
        android:id="@+id/DragDrop_Drag3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/DragDrop_Drag2"
        android:layout_below="@+id/DragDrop_Drag2"
        android:layout_marginTop="30dp"
        android:text="Drag 3" />

    <Button
        android:id="@+id/DragDrop_Drop1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:text="Drop 1" />

    <Button
        android:id="@+id/DragDrop_Drop2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_above="@+id/DragDrop_Drag3"
        android:layout_alignLeft="@+id/DragDrop_Drop1"
        android:text="Drop 2" />

    <Button
        android:id="@+id/DragDrop_Drop3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/DragDrop_Drag3"
        android:layout_alignBottom="@+id/DragDrop_Drag3"
        android:layout_alignLeft="@+id/DragDrop_Drop2"
        android:text="Drop 3" />

</RelativeLayout>